<div>
    <img id = "image" src="assets/media/Isekai_Shokudō_logo.png" alt="restaurant to another world logo">
</div>

<h1 id="title">Burgers</h1>

<div id="notEaten">
    <h2>Burgers that are not devoured</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            <h2>{{burger_name}}</h2>
            <button class="change-devour" data-id="{{id}}">
                DEVOUR!
            </button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>

</div>

<div id="eaten">
    <h2>Burgers that have been devoured</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            <h2>{{burger_name}}</h2>
            Devoured.
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>
<div id="addBurgerForm">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="name">Burger Name:</label>
            <input type="text" id="name" name="burger_name">
        </div>

        <button type="submit">Add Burger!</button>
    </form>
</div>